# REQ Scraper Configuration

# Target website settings
REQ_BASE_URL=https://www.registreentreprises.gouv.qc.ca

# Rate limiting & concurrency (very conservative for stealth)
MAX_CONCURRENCY=1
REQUESTS_PER_MINUTE=5
REQUEST_TIMEOUT_MS=60000
MAX_RETRIES=3
MIN_DELAY_BETWEEN_REQUESTS_MS=15000
MAX_DELAY_BETWEEN_REQUESTS_MS=25000
PAGE_LOAD_DELAY_MS=8000
FORM_INTERACTION_DELAY_MS=3000

# Proxy settings (optional)
PROXY_POOL_FILE=proxies.txt
# Example proxy formats:
# http://user:pass@proxy.com:8080
# socks5://user:pass@proxy.com:1080

# Debug settings
DEBUG_LEVEL=info
ENABLE_SCREENSHOTS=false
SAVE_FAILED_RESPONSES=true
TRACE_REQUESTS=false

# Browser settings
HEADLESS=true
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# Output settings
OUTPUT_FORMAT=jsonl
OUTPUT_FILE=output/req_results.jsonl
CSV_OUTPUT_FILE=output/req_results.csv